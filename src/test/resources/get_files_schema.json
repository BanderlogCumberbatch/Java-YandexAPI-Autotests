{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "limit": {
      "type": "integer"
    },
    "offset": {
      "type": "integer"
    },
    "items": {
      "type": "array",
      "items": [
        {
          "type": "object",
          "properties": {
            "path": {
              "type": "string"
            },
            "type": {
              "type": "string",
              "enum": ["file"]
            },
            "name": {
              "type": "string"
            },
            "created": {
              "type": "string",
              "format": "date-time"
            },
            "modified": {
              "type": "string",
              "format": "date-time"
            },
            "size": {
              "type": "integer"
            },
            "mime_type": {
              "type": "string"
            },
            "md5": {
              "type": "string",
              "pattern": "^.{32}$"
            },
            "sha256": {
              "type": "string",
              "pattern": "^.{64}$"
            },
            "preview": {
              "type": "string"
            },
            "public_key": {
              "type": "string"
            },
            "public_url": {
              "type": "string"
            },
            "_embedded": {
              "type": "object",
              "properties": {
                "total": {
                  "type": "integer"
                },
                "limit": {
                  "type": "integer"
                },
                "offset": {
                  "type": "integer"
                },
                "path": {
                  "type": "string"
                },
                "sort": {
                  "type": "string"
                },
                "items": {
                  "type": "array",
                  "items": [
                    {
                      "type": "object"
                    }
                  ]
                }
              },
              "required": [
                "total",
                "limit",
                "offset",
                "path",
                "sort",
                "items"
              ]
            },
            "media_type": {
              "type": "string",
              "enum": ["image", "document", "compressed", "video", "executable"]
            },
            "file": {
              "type": "string"
            },
            "resource_id": {
              "type": "string"
            },
            "share": {
              "type": "object",
              "properties": {
                "is_owned": {
                  "type": "boolean"
                },
                "is_root": {
                  "type": "boolean"
                },
                "rights": {
                  "type": "string"
                }
              },
              "required": [
                "is_owned",
                "is_root",
                "rights"
              ]
            },
            "revision": {
              "type": "integer"
            },
            "comment_ids": {
              "type": "object",
              "properties": {
                "public_resource": {
                  "type": "string"
                },
                "private_resource": {
                  "type": "string"
                }
              },
              "required": [
                "public_resource",
                "private_resource"
              ]
            },
            "custom_properties": {
              "type": "object"
            },
            "exif": {
              "type": "object",
              "properties": {
                "date_time": {
                  "type": "string"
                },
                "gps_latitude": {
                  "type": "object"
                },
                "gps_longitude": {
                  "type": "object"
                }
              },
              "required": [
                "date_time"
              ]
            },
            "antivirus_status": {
              "type": "string"
            },
            "photoslice_time": {
              "type": "string"
            },
            "sizes": {
              "type": "array",
              "items": [
                {
                  "type": "object",
                  "properties": {
                    "url": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "url",
                    "name"
                  ]
                }
              ]
            }
          },
          "required": [
            "path",
            "type",
            "name",
            "created",
            "modified",
            "size",
            "mime_type",
            "md5",
            "sha256",
            "preview",
            "media_type",
            "file",
            "resource_id",
            "revision",
            "comment_ids",
            "exif",
            "antivirus_status",
            "sizes"
          ]
        }
      ]
    }
  },
  "required": [
    "limit",
    "offset",
    "items"
  ]
}